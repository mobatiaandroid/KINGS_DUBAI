<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeMain"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titlelinear"
        android:orientation="horizontal">

        <com.mobatia.kingsedu.manager.CustomFontSansProTextNoColorSemiBold
            android:id="@+id/titleheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:text="Academic Year:"
            android:paddingLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <com.mobatia.kingsedu.manager.CustomFontSansProTextNoColorSemiBold
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:text="swewer"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/reportRecycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/titlelinear"/>
</RelativeLayout>

