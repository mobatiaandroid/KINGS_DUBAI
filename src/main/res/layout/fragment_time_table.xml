<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">
        <include
            android:id="@+id/progressDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/custom_progress_layout"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
     >
        <com.mobatia.kingsedu.manager.CustomFontDJ5TextWhite
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/split_bg"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Timetable"
            android:textColor="@color/white"
            android:textSize="17dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/info"
            android:layout_below="@+id/titleTextView"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/studentSpinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/event_spinnerbg"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/studImg"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/boy"
                    app:siBorderColor="#003156"
                    app:siBorderWidth="1dp" />

                <com.mobatia.kingsedu.manager.CustomFontSansProTextWhiteWithoutColor
                    android:id="@+id/studentName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:text="Select a child"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center"
                    android:layout_weight="12"
                    android:src="@drawable/arrowdownnew"
                    android:visibility="visible" />

            </LinearLayout>

            <com.mobatia.kingsedu.manager.CustomFontSansProTextWhiteWithoutColor

                android:id="@+id/textViewYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="Class:"
                android:textColor="#ff000000"
                android:textSize="16sp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/light_grey"

                android:visibility="gone" />

            <com.mobatia.kingsedu.manager.CustomFontSansProTextWhiteWithoutColor
                android:id="@+id/enterTextView"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="Enter CCA Choices:"
                android:textColor="#ff000000"
                android:textSize="16sp"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/noDataRelative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/noDataImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:src="@drawable/no_data" />

                    <com.mobatia.kingsedu.manager.CustomFontSansProTextWhiteWithoutColor
                        android:id="@+id/noDataTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/grey" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/alertTxtRelative"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.mobatia.kingsedu.manager.CustomFontSansProTextWhiteWithoutColor
                    android:id="@+id/alertText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/grey"
                    android:visibility="gone" />
            </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

           <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/weekRecyclerList"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:overScrollMode="never"
                    android:scrollbars="vertical" />
                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:app="http://schemas.android.com/tools"
                    android:id="@+id/card_viewAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:elevation="1dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/present"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardUseCompatPadding="true"
                    app:ignore="NamespaceTypo">

                    <LinearLayout
                        android:id="@+id/relSub"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@color/present"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/starLinearR"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".15"
                            android:clickable="true"
                            android:layout_marginLeft="5dp"
                            android:visibility="invisible"
                            android:orientation="vertical"
                            android:gravity="center">
                            <com.mobatia.kingsedu.manager.CustomFontSansProTextWhiteWithoutColor
                                android:id="@+id/periodTxt"
                                style="@style/textstyletimetablesingle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginRight="5dp"
                                android:textSize="16dp"
                                android:layout_toLeftOf="@+id/llread"
                                android:text="TUT"
                                android:gravity="center"
                                android:visibility="invisible"
                                android:textColor="@color/logout_user" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/llread"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".82"
                            android:gravity="left"
                            android:background="@color/present"
                            android:visibility="visible"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="100"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp">

                                <com.mobatia.kingsedu.manager.CustomFontSansProTextWhiteWithoutColor
                                    style="@style/textstyletimetablesingle"
                                    android:layout_width="0dp"
                                    android:layout_weight="20"
                                    android:layout_height="match_parent"
                                    android:layout_toLeftOf="@+id/llread"
                                    android:textSize="16dp"
                                    android:text="Sun"
                                    android:background="@color/present"
                                    android:gravity="center"
                                    android:textColor="@color/black" />
                                <com.mobatia.kingsedu.manager.CustomFontSansProTextWhiteWithoutColor
                                    style="@style/textstyletimetablesingle"
                                    android:layout_width="0dp"
                                    android:layout_weight="20"
                                    android:layout_height="match_parent"
                                    android:layout_toLeftOf="@+id/llread"
                                    android:textSize="16dp"
                                    android:text="Mon"
                                    android:gravity="center"
                                    android:layout_marginRight="1dp"

                                    android:background="@color/present"

                                    android:textColor="@color/black" />
                                <com.mobatia.kingsedu.manager.CustomFontSansProTextWhiteWithoutColor
                                    style="@style/textstyletimetablesingle"
                                    android:layout_width="0dp"
                                    android:layout_weight="20"
                                    android:layout_height="match_parent"
                                    android:layout_toLeftOf="@+id/llread"
                                    android:textSize="16dp"
                                    android:text="Tue"
                                    android:gravity="center"
                                    android:layout_marginRight="1dp"

                                    android:background="@color/present"

                                    android:textColor="@color/black" />
                                <com.mobatia.kingsedu.manager.CustomFontSansProTextWhiteWithoutColor
                                    style="@style/textstyletimetablesingle"
                                    android:layout_width="0dp"
                                    android:layout_weight="20"
                                    android:layout_height="match_parent"
                                    android:layout_toLeftOf="@+id/llread"
                                    android:textSize="16dp"
                                    android:text="Wed"
                                    android:layout_marginRight="1dp"

                                    android:gravity="center"
                                    android:background="@color/present"

                                    android:textColor="@color/black" />
                                <com.mobatia.kingsedu.manager.CustomFontSansProTextWhiteWithoutColor
                                    style="@style/textstyletimetablesingle"
                                    android:layout_width="0dp"
                                    android:layout_weight="20"
                                    android:layout_height="match_parent"
                                    android:layout_toLeftOf="@+id/llread"
                                    android:textSize="16dp"
                                    android:gravity="center"
                                    android:background="@color/present"

                                    android:text="Thu"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/timeTableSingleRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/submitBtn"
                    android:layout_below="@+id/textViewStudName"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:overScrollMode="never"
                    android:scrollbars="vertical" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/timeTableAllRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/submitBtn"
                    android:layout_below="@+id/textViewStudName"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:overScrollMode="never"
                    android:scrollbars="vertical" />

            </LinearLayout>


        </LinearLayout>
        <com.ryanharter.android.tooltips.ToolTipLayout
            android:id="@+id/tooltip_containerold"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

</RelativeLayout>